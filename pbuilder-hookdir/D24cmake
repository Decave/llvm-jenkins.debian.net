# apt install wget libssl-dev
# wget https://github.com/Kitware/CMake/releases/download/v3.20.5/cmake-3.20.5.tar.gz
# tar zxvf cmake-3.20.5.tar.gz
# cd cmake-3.20.5
# ./bootstrap --prefix=/tmp/cmake-3.20.5 && make -j $(nproc) && make install
